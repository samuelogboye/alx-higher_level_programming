#!/usr/bin/python3

"""Define a class Square"""


class Square:
    """Represent a square"""
    def __init__(self, size=0):
        self.__size = size

    def get_size(self):
        return self.__size

    def set_size(self, size):
        if self.__size != isdigit():
            raise TypeError("size must be an integer")
        elif self.__size < 0:
            raise ValueError("size must be >= 0")
        else:
            self.__size = size
